{% extends 'Catalogos/catalogo.twig' %}

{% block title 'Listado de docentes' %}

{% block tabla %}
    <table class="table table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th>No</th>
                <th>Nombre</th>
                <th>Sexo</th>
                <th>Cédula Prof</th>
                <th>División</th>
                <th>Carrera</th>
                <th>Estatus</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="table-content">
            <!-- Contenido de la tabla -->
            {% for d in docentes %}
                <tr>
                    <td>{{ d.id }}</td>
                    <td>{{ d.getNombreCompleto|convert_encoding('UTF-8', 'iso-2022-jp') }}</td>
                    <td class="text-center">{{ d.sexo }}</td>
                    <td>{{ d.cedula_profesional }}</td>
                    <td>{{ d.getDivision.nombre|convert_encoding('UTF-8', 'iso-2022-jp') }}</td>
                    <td>{{ d.getCarrera.nombre|convert_encoding('UTF-8', 'iso-2022-jp') }}</td>
                    <td class="text-center"><i class="fa fa-check {{ (d.estatus == 'Si') ? 'text-primary' : 'text-muted' }}"></i></td>
                    <td class="text-right">
                        <button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#operationModal" data-id="{{ d.id }}" data-model="{{ modelo }}" data-operation="Editar">
                            <i class="fa fa-edit"></i> Editar
                        </button>
                        <button type="button" class="btn btn-xs btn-danger" data-toggle="modal" data-target="#operationModal" data-id="{{ d.id }}" data-model="{{ modelo }}" data-operation="Eliminar">
                            <i class="fa fa-trash"></i> Eliminar
                        </button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}