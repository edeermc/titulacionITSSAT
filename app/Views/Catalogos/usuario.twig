{% extends 'Catalogos/catalogo.twig' %}

{% block title 'Listado de usuarios' %}

{% block tabla %}
    <table class="table table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th>No</th>
                <th>Usuario</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Perfil</th>
                <th>Docente</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="table-content">
        {% for u in usuarios  %}
            <tr>
                <td>{{ u.id }}</td>
                <td>{{ u.usuario }}</td>
                <td>{{ u.nombre }}</td>
                <td>{{ u.correo }}</td>
                <td>{{ u.getPerfil.nombre }}</td>
                <td>{{ u.getDocente.getNombreCompleto }}</td>
                <td class="text-right">
                    <button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#operationModal" data-id="{{ u.id }}" data-model="{{ modelo }}" data-operation="Editar">
                        <i class="fa fa-edit"></i> Editar
                    </button>
                    <button type="button" class="btn btn-xs btn-danger" data-toggle="modal" data-target="#operationModal" data-id="{{ u.id }}" data-model="{{ modelo }}" data-operation="Eliminar">
                        <i class="fa fa-trash"></i> Eliminar
                    </button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}