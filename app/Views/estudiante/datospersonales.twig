{% extends 'template/temp_guest.twig' %}

{% block title 'Datos personales' %}

{% block body %}
    <div class="col-sm-6 col-md-4">
        <b>No de control: </b>
        {{ egresado.id }}
    </div>
    <div class="col-sm-6 col-md-6">
        <b>Alumno: </b>
        {{ egresado.getNombreCompleto }}
    </div>
    <div class="col-sm-3 col-md-2">
        <b>Sexo: </b>
        {{ egresado.sexo == 'H' ? 'Masculino' : 'Femenino' }}
    </div>

    <form action="{{ route('egresado/save') }}" method="post" class="form-horizontal" id="form-data">
        <input type="hidden" value="{{ egresado.id }}" name="id">
        <div class="form-group">
            <div class="page-header text-center"><h4>Dirección personal</h4></div>
            <label for="calle" class="control-label col-sm-2 col-md-1">Calle:</label>
            <div class="col-sm-10 col-md-11">
                <input type="text" id="calle" name="calle" class="form-control" value="{{ egresado.calle }}" required autofocus>
            </div>
        </div>

        <div class="form-group">
            <label for="colonia" class="control-label col-sm-2 col-md-1">Colonia:</label>
            <div class="col-sm-5 col-md-6">
                <input type="text" id="colonia" name="colonia" class="form-control" value="{{ egresado.colonia }}" required>
            </div>

            <label for="cp" class="control-label col-sm-2 col-md-1">C.P.:</label>
            <div class="col-sm-3 col-md-4">
                <input type="number" id="cp" name="cp" class="form-control" value="{{ egresado.cp }}" required>
            </div>
        </div>

        <div class="form-group">
            <label for="ciudad" class="control-label col-sm-2 col-md-1">Ciudad:</label>
            <div class="col-sm-4 col-md-5">
                <input type="text" id="ciudad" name="ciudad" class="form-control" value="{{ egresado.ciudad }}" required>
            </div>

            <label for="municipio" class="control-label col-sm-2 col-md-1">Municipio:</label>
            <div class="col-sm-4 col-md-5">
                <input type="text" id="municipio" name="municipio" class="form-control" value="{{ egresado.municipio }}" required>
            </div>
        </div>

        <div class="form-group">
            <label for="estado" class="control-label col-sm-2 col-md-1">Estado:</label>
            <div class="col-sm-4 col-md-5">
                <input type="text" id="estado" name="estado" class="form-control" value="{{ egresado.estado }}" required>
            </div>
        </div>


        <div class="form-group">
            <div class="page-header text-center"><h4>Datos de contacto</h4></div>
            <label for="telefono" class="control-label col-sm-2 col-md-1">Teléfono:</label>
            <div class="col-sm-4 col-md-5">
                <input type="tel" id="telefono" name="telefono" class="form-control" value="{{ egresado.telefono }}" required>
            </div>

            <!-- <label for="correo" class="control-label col-sm-2 col-md-1">Correo:</label>
            <div class="col-sm-4 col-md-5">
                <input type="email" id="correo" name="correo" class="form-control" value="{{ egresado.correo }}" required>
            </div> -->
        </div>

        <div class="form-group">
            <div class="col-sm-12 text-right">
                <a href="{{ route('egresado') }}" class="btn btn-default"><i class="fa fa-times"></i> Cancelar</a>
                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Guardar y continuar</button>
            </div>
        </div>
    </form>
{% endblock %}