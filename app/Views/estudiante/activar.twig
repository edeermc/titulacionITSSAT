{% extends 'estudiante/template.twig' %}

{% block title 'Registrar nuevo usuario' %}

{% block content %}
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-primary">
            <div class="panel-heading text-center">
                <h3>{{ (student.estatus == 'Registro') ? 'Registrar nuevo' : 'Recuperar' }} usuario</h3>
            </div>
            <form action="{{ route('egresado/saveact') }}" method="post" class="form-horizontal" onsubmit="return checkPass();">
                <div class="panel-body">
                    <div class="form-group">
                        <label for="usuario" class="control-label col-sm-3">No de control:</label>
                        <div class="col-sm-9">
                            <input id="usuario" type="text" class="form-control" name="usuario" value="{{ student.id }}" readonly autocomplete="off">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email" class="control-label col-sm-3">Correo electrónico:</label>
                        <div class="col-sm-9">
                            <input id="email" type="email" class="form-control" name="email" value="{{ student.correo }}" readonly autocomplete="off">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="pass1" class="control-label col-sm-3">Contraseña:</label>
                        <div class="col-sm-9">
                            <input id="pass1" type="password" class="form-control" name="contrasena" placeholder="Contraseña" autofocus required autocomplete="off">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="pass2" class="control-label col-sm-3">Repetir:</label>
                        <div class="col-sm-9">
                            <input id="pass2" type="password" class="form-control" placeholder="Contraseña" required autocomplete="off">
                        </div>
                    </div>
                </div>
                <div class="panel-footer text-right">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-arrow-save"></i> {{ (student.estatus == 'Registro') ? 'Guardar' : 'Nueva contraseña' }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}