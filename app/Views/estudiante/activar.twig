<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="stylesheet" href="{{ resource('bootstrap/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ resource('css/custom-siderbar.css') }}">
    <link rel="stylesheet" href="{{ resource('font-awesome/css/font-awesome.min.css') }}">

    <link rel="icon" type="image/png" href="{{ resource('img/logo.png') }}">
    <title>{{ (student.estatus == 'Registro') ? 'Registrar nuevo' : 'Recuperar' }} usuario | cPanel SYCPROF</title>
    <style> body{  background-color: #262626;  } </style>
</head>

<body>
<div class="container" style="margin-top: 180px;">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading text-center">
                    <h3>{{ (student.estatus == 'Registro') ? 'Registrar nuevo' : 'Recuperar' }} usuario</h3>
                </div>
                <form action="{{ route('egresado/saveact') }}" method="post" class="form-horizontal" onsubmit="return checkPass();">
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="usuario" class="control-label col-sm-3">No de control:</label>
                            <div class="col-sm-9">
                                <input id="usuario" type="text" class="form-control" name="usuario" value="{{ student.id }}" readonly autocomplete="off">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email" class="control-label col-sm-3">Correo electrónico:</label>
                            <div class="col-sm-9">
                                <input id="email" type="email" class="form-control" name="email" value="{{ student.correo }}" readonly autocomplete="off">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="pass1" class="control-label col-sm-3">Contraseña:</label>
                            <div class="col-sm-9">
                                <input id="pass1" type="password" class="form-control" name="contrasena" placeholder="Contraseña" autofocus required autocomplete="off">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="pass2" class="control-label col-sm-3">Repetir:</label>
                            <div class="col-sm-9">
                                <input id="pass2" type="password" class="form-control" placeholder="Contraseña" required autocomplete="off">
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer text-right">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-arrow-right"></i> Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div><!-- /.container -->

<!-- JavaScript -->
<script type="text/javascript" src="{{ resource('jquery/jquery.min.js') }}"></script>
<script type="text/javascript" src="{{ resource('bootstrap/js/bootstrap.js') }}"></script>
<!-- <script type="text/javascript" src="{{ resource('metisMenu/metisMenu.min.js') }}"></script> -->
<script type="text/javascript" src="{{ resource('js/waitingMessage.js') }}"></script>
<script type="text/javascript" src="{{ resource('js/notify.min.js') }}"></script>
<script type="text/javascript" src="{{ resource('js/request.js') }}"></script>
<script type="text/javascript" src="{{ resource('js/script.js') }}"></script>
<script>
    function checkPass() {
        var p1 = $('#pass1');
        var p2 = $('#pass2');

        if (p1.val() === p2.val())
            return true;
        else {
            alert("Las contraseñas no coinciden");
            p1.val('');
            p2.val('');
            p1.focus();

            return false;
        }
    }
</script>
</body>
</html>