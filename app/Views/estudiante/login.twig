{% extends 'estudiante/template.twig' %}

{% block title 'Iniciar sesión' %}

{% block content %}
    <div class="col-sm-4 col-sm-offset-4">
        <div class="panel panel-primary">
            <div class="panel-heading text-center">
                <h3>Iniciar Sesión</h3>
            </div>
            <form action="{{ route('auth') }}" method="post" class="form-horizontal">
                <div class="panel-body">
                    <div class="container">
                        <div class="form-group">
                            <div class="input-group col-sm-3">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input id="usuario" type="text" class="form-control" name="usuario" placeholder="No de Control" required autofocus autocomplete="off">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group col-sm-3">
                                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                <input id="contrasena" type="password" class="form-control" name="contrasena" placeholder="Contrase&ntilde;a" required>
                            </div>
                        </div>

                        <a href="{{ route('egresado/registro') }}">No tengo cuenta, registrarme.</a> <br>
                        <a href="{{ route('egresado/recuperar') }}">Olvidadaste tu contraseña?.</a>
                    </div>
                </div>
                <div class="panel-footer text-right">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Entrar</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}