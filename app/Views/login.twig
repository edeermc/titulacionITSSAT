<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="stylesheet" href="{{ resource('bootstrap/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ resource('css/custom-siderbar.css') }}">
    <link rel="stylesheet" href="{{ resource('font-awesome/css/font-awesome.min.css') }}">

    <link rel="icon" type="image/png" href="{{ resource('img/logo.png') }}">
    <title>Iniciar Sesión | cPanel SYCPROF</title>
    <style> body{
            background-color: #262626;
        } </style>
</head>

<body>
<div class="container" style="margin-top: 180px;">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <div class="panel panel-primary">
                <div class="panel-heading text-center">
                    <h3>Iniciar Sesión</h3>
                </div>
                <form action="{{ route('auth') }}" method="post" class="form-horizontal">
                    <div class="panel-body">
                        <div class="container">
                            <div class="form-group">
                                <div class="input-group col-sm-3">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input id="usuario" type="text" class="form-control" name="usuario" placeholder="Usuario" required autofocus autocomplete="off">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group col-sm-3">
                                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                    <input id="contrasena" type="password" class="form-control" name="contrasena" placeholder="Contrase&ntilde;a" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer text-right">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Entrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div><!-- /.container -->

<!-- JavaScript -->
<script type="text/javascript" src="{{ resource('jquery/jquery.min.js') }}"></script>
<script type="text/javascript" src="{{ resource('bootstrap/js/bootstrap.js') }}"></script>
<!-- <script type="text/javascript" src="{{ resource('metisMenu/metisMenu.min.js') }}"></script> -->
<script type="text/javascript" src="{{ resource('js/waitingMessage.js') }}"></script>
<script type="text/javascript" src="{{ resource('js/notify.min.js') }}"></script>
<script type="text/javascript" src="{{ resource('js/request.js') }}"></script>
<script type="text/javascript" src="{{ resource('js/script.js') }}"></script>
</body>
</html>