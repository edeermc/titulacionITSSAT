{% extends 'template/temp.twig' %}

{% block title 'Error 404' %}

{% block header %}
    <h1>
        Error desconocido
    </h1>
    <ol class="breadcrumb">
        <li class="active"><a href="{{ route('/') }}"><i class="fa fa-home"></i> Inicio</a></li>
    </ol>
{% endblock %}

{% block body %}
    <div class="error-page">
        <h2 class="headline text-yellow">404</h2>

        <div class="error-content">
            <h3><i class="fa fa-warning text-yellow"></i> Oops! Página no encontrada.</h3>

            <p>
                No podemos encontrar la página que estas buscando en el dominio.
                Mientras tanto, podrías <a href="{{ route('/') }}">regresar al inicio</a> o buscar en el siguiente formulario.
            </p>

            <form class="search-form" onsubmit="return false;">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Buscar...">

                    <div class="input-group-btn">
                        <button type="submit" name="submit" class="btn btn-warning btn-flat"><i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- /.error-page -->
{% endblock %}